
.main-width {
    width: 70%;
    padding: 1rem 1.66rem;
    box-sizing: border-box;
}

.main-wrap {
    display: flex;
    margin-top: 1.66rem;
    justify-content: space-between;

    main.main-width {
        padding: 2.667rem 1.66rem;
        background: var(--main-color);
        border-radius: 4px;

        .page-title {
            margin: 0 0 1.2rem;
            font-size: 2.667rem;
            font-weight: 600;
            line-height: 1.31;
            color: var(--font-color-1);
            border-bottom: unset;
        }

        .page {
            @import 'markdown';
        }
    }
}

.intro-card {
    margin: 1.66rem auto 0;
    padding: 2.667rem 1.66rem;
    background-color: var(--main-color);
    border-radius: 4px;
    text-align: center;
    font-size: 20px;
    line-height: 2rem;
    color: var(--font-color-1);
    font-weight: 500;
    font-style: italic;
    p {
        margin: 0;
    }
}

@media (max-width: 1000px) {
    .main-width {
        width: 100%;
        padding: 1rem 0;
    }
}